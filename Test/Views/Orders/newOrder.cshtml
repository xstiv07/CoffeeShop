<div class="container">
    <div class="col-md-4 pull-left" ng-if="!processing">
        <form class="form-horizontal" name="form" ng-submit="add(form.$valid)" ng-model="form" novalidate>
            <div class="form-group">
                <label>Customer First Name</label>
                <input required type="text" class="form-control" ng-model="order.CustomerFirstName">
            </div>

            <div class="form-group">
                <label>Customer Last Name</label>
                <input required type="text" class="form-control" ng-model="order.CustomerLastName">
            </div>

            <div class="form-group">
                <label>Location</label>
                <select required class="form-control" name="location" ng-model="order.OrderLocation" ng-options="opt as opt for opt in orderLocation"></select>
            </div>

            <div class="form-group">
                <label>Status</label>
                <select required class="form-control" name="status" ng-model="order.OrderStatus" ng-options="opt as opt for opt in orderStatus"></select>
            </div>

            <div class="form-group pull-right">
                <button type="submit" class="btn btn-primary">Create</button>
                <a ui-sref="inventory" class="btn btn-primary">Cancel</a>
            </div>
        </form>
    </div>

    <div ng-repeat="templ in templates track by $index">
        <div ng-include src="templ.url"></div>
    </div>

    @*<div class="alert alert-danger bottom-0 align-center" ng-show="displayError">
        {{error}}
    </div>*@
</div>

<script src="~/Scripts/xml2json.min.js" type="text/javascript"></script>

<script type="text/ng-template" id="orderItems.html">
    <div class="col-md-5 pull-right" ng-if="!processing">
        <div class="form-group">
            <label>Available items</label>
            <select required class="form-control" ng-model="orderItem">
                <option ng-repeat="item in items">{{item.Name}}</option>
            </select>
        </div>
        <div class="btn-toolbar">
            @*<button class="btn btn-danger pull-right" ng-show="orderItems.length > 0" ng-click="deleteOrderItem($index)">Delete</button>*@
            <button class="btn btn-primary pull-right" ng-click="addOrderItem()">Add More</button>
        </div>
        
    </div>
</script>