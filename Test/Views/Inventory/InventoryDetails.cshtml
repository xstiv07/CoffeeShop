<script src="~/Scripts/xml2json.min.js" type="text/javascript"></script>

<div class="container">
    <div class="col-md-offset-4 col-md-4" ng-if="!processing">
        <form class="form-horizontal" name="form" ng-submit="update(form.$valid)" novalidate>
            <div class="form-group">
                <label>Name</label>
                <input required type="text" class="form-control" ng-model="item.Name">
            </div>

            <div class="form-group">
                <label>Description</label>
                <input required type="text" class="form-control" ng-model="item.Description">
            </div>

            <div class="form-group">
                <label>Milk</label>
                <select class="form-control" name="singleSelect" ng-model="item.Milk" ng-options="opt as opt for opt in milkValues"></select>
            </div>

            <div class="form-group">
                <label>Size</label>
                <select class="form-control" name="singleSelect" ng-model="item.Size" ng-options="opt as opt for opt in sizeValues"></select>
            </div>

            <div class="form-group">
                <label>Quantity Available</label>
                <input type="number" min="1" class="form-control" ng-model="item.Quantity">
            </div>

            <div class="form-group">
                <label>Price</label>
                <input required min="1" type="number" class="form-control" ng-model="item.Price">
            </div>

            <div class="form-group centered">
                <button type="submit" class="btn btn-primary">Update</button>
                <button ng-click="deleteItem()" class="btn btn-primary">Delete</button>
                <a ng-click="backToItems()" class="btn btn-primary">Back</a>
            </div>
        </form>
    </div>
    <div class="alert alert-success bottom-0 text-center" ng-show="displaySuccess">
        {{success}}
    </div>
</div>