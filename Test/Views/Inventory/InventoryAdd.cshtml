<script src="~/Scripts/xml2json.min.js" type="text/javascript"></script>

<div class="progress" ng-if="progress">
    <div class="progress-bar" role="progressbar" aria-valuenow="0"
         aria-valuemin="0" aria-valuemax="100" ng-style="{width: progressPercentage }">
        {{progressPercentage}}
    </div>
</div>

<div class="container">
    <div class="col-md-offset-4 col-md-4" ng-if="!processing">
        <form class="form-horizontal" name="form" ng-submit="add(form.$valid)" ng-model="form" novalidate>
            <div class="form-group">
                <label>Name</label>
                <input required type="text" class="form-control" ng-model="item.Name">
            </div>

            <div class="form-group">
                <label>Description</label>
                <input required type="text" class="form-control" ng-model="item.Description">
            </div>

            <div class="form-group">
                <label>Milk</label>
                <select class="form-control" ng-model="item.Milk" ng-options="opt as opt for opt in milkValues"></select>
            </div>

            <div class="form-group">
                <label>Size</label>
                <select required class="form-control" name="singleSelect" ng-model="item.Size" ng-options="opt as opt for opt in sizeValues"></select>
            </div>

            <div class="form-group">
                <label>Quantity Available</label>
                <input type="number" min="1" required class="form-control" ng-model="item.Quantity">
            </div>

            <div class="form-group">
                <label>Price</label>
                <input required min="1" type="number" class="form-control" ng-model="item.Price">
            </div>

            <div class="form-group">
                <label for="filename">Upload required</label>
                <input type="file"
                       name="s3File"
                       onchange="angular.element(this).scope().setFile(this)"
                       ng-model="fileName" valid-file
                       required />
            </div>

            <div class="form-group pull-right">
                <button type="submit" class="btn btn-primary">Create</button>
                <a ui-sref="inventory" class="btn btn-primary">Cancel</a>
            </div>
        </form>
    </div>

    <div class="alert alert-danger bottom-0 align-center" ng-show="displayError">
        {{error}}
    </div>
</div>